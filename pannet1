CREATE DATABASE pannet_tcc1

USE pannet_tcc1

CREATE TABLE usuario
(
    id_usuario int identity primary key,
	nick varchar(20),
	email varchar(50),
	senha varchar (15),
	img_perfil varchar(1000),
	data_insert varchar(30) null, 
	data_update varchar(30) null, 
	status varchar(30) null
)

CREATE TABLE postagem
(
    id_postagem int identity primary key,
	texto varchar(3000),
	img_post varchar(1000),
	data_insert varchar(30) null, 
	data_update varchar(30) null, 
	status varchar(30) null
)

CREATE TABLE sala 
(
    id_sala int identity primary key,
	nome varchar(30),
	img_sala varchar(1000),
	data_insert varchar(30) null, 
	data_update varchar(30) null, 
	status varchar(30) null
)


create table amigos (
   id_amigo int identity primary key,
   id_amigos varchar(40),
   data_insert varchar(30) null, 
   data_update varchar(30) null, 
   status varchar(30) null
)


create table amigos_usuario (
   amigos_id int,
   usuarioau_id int,
   foreign key (usuarioau_id) references usuario(id_usuario),
   foreign key (amigos_id) references amigos(id_amigo)
)



create table sala_usuario(
	usuario_id int,
	sala_id int,
	foreign key (usuario_id) references usuario(id_usuario),
	foreign key (sala_id) references sala(id_sala)
)
